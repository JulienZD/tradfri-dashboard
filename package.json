{
  "private": true,
  "name": "tradfri-server",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "Julien",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "set NODE_ENV=production&&node dist/app.js",
    "serve:client": "cd client && npm run dev",
    "serve:server": "ts-node-dev src/app.ts",
    "dev": "set SERVER_PORT=3001&&concurrently \"npm run serve:server\" \"npm run serve:client\""
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "node-tradfri-client": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.38",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
